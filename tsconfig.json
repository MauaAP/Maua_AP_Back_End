{
  "compilerOptions": {
    "target": "ES6",              
    "module": "NodeNext",         
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,      
    "outDir": "./dist",           
    "rootDir": "./",
    "baseUrl": "./",                // Permite caminhos relativos mais organizados
    "paths": {                      // Atalho para importar sem "../../../../"
      "@prisma/*": ["prisma/*"],
      "@src/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "prisma"]
}
