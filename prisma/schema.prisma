datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  role      String
  password  String
  telefone  String     @unique
  cpf       String     @unique
  status    String
  presences Presence[]
}

model Event {
  id                    String     @id @default(uuid())
  eventName             String
  date                  DateTime
  host                  String
  manager               String[]
  hostEmail             String[]
  hostPhone             String[]
  local                 String
  modality              String
  targetAudience        String
  activityType          String
  maxParticipants       Int?
  goals                 String
  period                String
  contentActivities     String[]
  developedCompetencies String
  initTime              DateTime
  finishTime            DateTime
  link                  String?
  presences             Presence[]
}

model Presence {
  id      String   @id @default(uuid())
  eventId String
  event   Event    @relation(fields: [eventId], references: [id])
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  date    DateTime @unique

  @@unique([eventId, userId, date])
}
